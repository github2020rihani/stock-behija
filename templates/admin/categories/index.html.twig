{% extends 'base.html.twig' %}

{% block title %}Hello categoriesController!{% endblock %}

{% block body %}
    <div class="content-wrapper" style="min-height: 1602px;">

        <section class="content-header">
            <div class="container-fluid">
                <div class="row mb-2">
                    <div class="col-sm-6">
                        <h1>Categories</h1>
                    </div>
                </div>
                //appele de la fonction searchForm
                <div class="row">
                    <div class="col-12">
                        <!-- Main content -->
                        <div class="invoice p-3 mb-3">
                            <div class="row invoice-info">
                                <div class="col-sm-4 invoice-col">
                                               {{ form_start(form) }}
                                                {{ form_row(form) }}

                                    <button type="submit" class="btn-primary">Ajout</button>

                                    {{ form_end(form) }}
                                            </div>
                                </div>
                            </div>
                            <!-- Table row -->
                            <div class="row">
                                <div class="col-12 table-responsive">

                                    <table class="table table-striped">
                                        <thead>
                                        <tr>
                                            <th>ID Categorie</th>
                                            <th>Designation</th>
                                        </tr>
                                        </thead>
                                        <tbody>
                                        {% for categorie in categories %}
                                        <tr>
                                            <td>{{ categorie.id }}</td>
                                            <td>{{ categorie.name }}</td>
                                        </tr>
                                        {% endfor %}
                                        </tbody>
                                    </table>

                                </div>
                                <!-- /.col -->
                            </div>
                        </div>
                        <!-- /.invoice -->
                    </div><!-- /.col -->
             </div><!-- /.row -->

        </section>
        <!-- /.content -->
    </div>


{% endblock %}
